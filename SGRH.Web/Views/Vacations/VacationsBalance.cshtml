@model int

@{
    ViewData["Title"] = "Saldo de Vacaciones";
}

<hr />
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center"><strong>@ViewData["Title"]</strong></h3>
                </div>

                <div class="card-body border-info mb-3 text-center text-info">
                    <div class="row justify-content-center">
                        <div class="col-md-6 text-center">
                            <div class="d-flex justify-content-center">
                                <p class="card-text display-1">@Model</p>
                            </div>
                            <div class="d-flex justify-content-center">
                                <h5 class="card-title">Días disponibles</h5>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <a href="javascript:history.back()" class="btn btn-secondary">Volver</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

