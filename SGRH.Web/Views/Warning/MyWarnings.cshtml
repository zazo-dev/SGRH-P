@model IEnumerable<SGRH.Web.Models.Entities.Warning>

@{
    ViewData["Title"] = "Mis Amonestaciones";
    ViewBag.Titulo = "Gestión de Amonestaciones";
    ViewBag.NombreUbicacion = "Mis Amonestaciones";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-center"><strong>Mis Amonestaciones</strong></h3>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Razón
                    </th>
                    <th>
                        Observaciones
                    </th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reason)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Observations)
                        </td>
                        <td>
                            <div class="btn-group my-1">
                                <a asp-action="Details" asp-route-id="@item.Id_Warnings" class="btn btn-secondary">Detalles</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="form-group">
            <a href="javascript:history.back()" class="btn btn-secondary ml-2">Volver</a>
        </div>
    </div>
</div>