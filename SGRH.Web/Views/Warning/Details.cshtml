@model SGRH.Web.Models.WarningViewModel
@{
    ViewData["Title"] = "Detalles de Amonestación";
}
<hr/>
<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center"><strong>Detalles de Amonestación</strong></h3>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Razón:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" readonly value="@Model.Reason" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Observaciones:</label>
                        <div class="col-sm-8">
                            <textarea col="5" class="form-control" asp-for="Observations" readonly></textarea>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <a href="javascript:history.back()" class="btn btn-secondary ml-2">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
