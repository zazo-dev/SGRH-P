@model SGRH.Web.Models.ViewModels.SettlementDetailsViewModel

@{
    ViewBag.Titulo = "Gestión de Liquidaciones";
    ViewBag.NombreUbicacion = "Detalles Liquidación";
    ViewData["Title"] = "Detalles Liquidación";
}

<hr />
<div class="container">
    <form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card">
            <div class="card-header">
                <h3 class="text-center"><strong>Detalles de Liquidación</strong></h3>
            </div>
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6">
                        @if (Model.Layoff.HasEmployerResponsibility)
                        {
                            <div class="form-group">
                                <label asp-for="Layoff.PersonalAction.User.FullName" class="control-label">Nombre del Empleado:</label>
                                <input asp-for="Layoff.PersonalAction.User.FullName" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label  class="control-label">Tipo de Liquidacion:</label>
                                <input value="Con Responsabilidad Patronal" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.AvgLast6MonthsSalary" class="control-label">Promedio mensual de los últimos 6 meses:</label>
                                <input asp-for="Settlement.AvgLast6MonthsSalary" class="form-control" readonly />
                            </div>


                            <div class="form-group">
                                <label asp-for="Settlement.DailyAvgLast6Months" class="control-label">Promedio diario de los últimos 6 meses:</label>
                                <input asp-for="Settlement.DailyAvgLast6Months" class="form-control" readonly />
                            </div>


                            <div class="form-group">
                                <label asp-for="Settlement.Bonus" class="control-label">Aguinaldo:</label>
                                <input asp-for="Settlement.Bonus" class="form-control" readonly />
                            </div>  

                            <div class="form-group">
                                <label asp-for="Settlement.UnenjoyedVacation" class="control-label">Saldo de Vacaciones no gozadas:</label>
                                <input asp-for="Settlement.UnenjoyedVacation" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.UnenjoyedVacationAmount" class="control-label">Monto por Vacaciones no gozadas:</label>
                                <input asp-for="Settlement.UnenjoyedVacationAmount" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.Notice" class="control-label">Cantidad de días de Preaviso:</label>
                                <input asp-for="Settlement.Notice" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.NoticeAmount" class="control-label">Monto por Preaviso:</label>
                                <input asp-for="Settlement.NoticeAmount" class="form-control" readonly />
                            </div>


                            <div class="form-group">
                                <label asp-for="Settlement.Severance" class="control-label">Cantidad de días de Cesantía:</label>
                                <input asp-for="Settlement.Severance" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.SeveranceAmount" class="control-label">Monto por Cesantía:</label>
                                <input asp-for="Settlement.SeveranceAmount" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.TotalSettlement" class="control-label">Total de Liquidación:</label>
                                <input asp-for="Settlement.TotalSettlement" class="form-control" readonly />
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <label asp-for="Layoff.PersonalAction.User.FullName" class="control-label">Nombre del Empleado:</label>
                                <input asp-for="Layoff.PersonalAction.User.FullName" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label class="control-label">Tipo de Liquidacion:</label>
                                <input value="Sin Responsabilidad Patronal" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.AvgLast6MonthsSalary" class="control-label">Promedio mensual de los últimos 6 meses:</label>
                                <input asp-for="Settlement.AvgLast6MonthsSalary" class="form-control" readonly />
                            </div>


                            <div class="form-group">
                                <label asp-for="Settlement.DailyAvgLast6Months" class="control-label">Promedio diario de los últimos 6 meses:</label>
                                <input asp-for="Settlement.DailyAvgLast6Months" class="form-control" readonly />
                            </div>


                            <div class="form-group">
                                <label asp-for="Settlement.Bonus" class="control-label">Aguinaldo:</label>
                                <input asp-for="Settlement.Bonus" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.UnenjoyedVacation" class="control-label">Saldo de Vacaciones no gozadas:</label>
                                <input asp-for="Settlement.UnenjoyedVacation" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.UnenjoyedVacationAmount" class="control-label">Monto por Vacaciones no gozadas:</label>
                                <input asp-for="Settlement.UnenjoyedVacationAmount" class="form-control" readonly />
                            </div>

                            <div class="form-group">
                                <label asp-for="Settlement.TotalSettlement" class="control-label">Total de Liquidación:</label>
                                <input asp-for="Settlement.TotalSettlement" class="form-control" readonly />
                            </div>

                        }

                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group">
                    <a href="javascript:history.back()" class="btn btn-secondary ml-2">Volver</a>
                </div>
            </div>
        </div>
    </form>
</div>
